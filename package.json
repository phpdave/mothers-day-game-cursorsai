{
  "name": "mothers-day-love-game",
  "version": "1.0.0",
  "description": "A sweet interactive game where children share their love messages with their mother",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["./jest.setup.js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "moduleFileExtensions": ["js", "json"],
    "verbose": true
  }
} 